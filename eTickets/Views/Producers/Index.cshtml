@model List<Producer>


@{

    ViewData["Title"] = "List Of Producer";
}




<div class="row">

    <div class="cold-md-10 offset-md-2">

        <table class="table">
            <thead>
                <tr>
                    <td>Picture</td>
                    <td>Producer</td>
                    <td>Bio</td>
                    <td>Aksiyon</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle "><img class="rounded-circle" src="@item.ProfilePicture" alt="@item.FullName" style="max-width: 150px" /></td>
                        <td class="align-middle ">@item.FullName</td>
                        <td class="align-middle ">@item.Bio</td>
                        <td class="align-middle ">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil"></i></a> |
                            <a class="btn btn-outline-info"><i class="bi bi-eye"></i></a> |
                            <a class="btn btn-outline-danger"><i class="bi bi-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>


</div>

























































