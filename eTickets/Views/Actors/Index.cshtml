@model List<Actor>


@{

    ViewData["Title"] = "List Of Actors";
}




<div class="row">

    <div class="cold-md-10 offset-md-2">
        
        <table class="table">
            <thead>
                <tr >
                    <td >Picture</td>
                    <td >Actor</td>
                    <td >Bio</td>
                    <td >Aksiyon</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr >
                        <td class="align-middle "><img class="rounded-circle" src="@item.ProfilePictureURL" alt="@item.FullName" style="max-width: 150px; max-height: 150px;" /></td>
                        <td class="align-middle ">@item.FullName</td>
                        <td class="align-middle ">@item.Bio</td>
                        <td class="align-middle ">
                            <a class="btn btn-outline-primary" asp-controller="Actors" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil"></i></a>  |
                            <a class="btn btn-outline-info" asp-controller="Actors" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i></a> |
                            <a class="btn btn-outline-danger" asp-controller="Actors" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
    <div style="position: fixed; right:25px; botom: 25px;" class="text-white">
        <a asp-controller="Actors" asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus plus-circle"> Add New </i>
        </a>
    </div>

</div>

























































