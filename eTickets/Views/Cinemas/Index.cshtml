@model List<Cinema>


@{

    ViewData["Title"] = "List Of Cinema";
}




<div class="row">

    <div class="cold-md-10 offset-md-2">
        
        <table class="table">
            <thead>
                <tr >
                    <td >Picture</td>
                    <td >Actor</td>
                    <td >Bio</td>
                    <td >Aksiyon</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr >
                        <td class="align-middle "><img class="rounded-circle" src="@item.Logo" alt="@item.Name" style="max-width: 150px" /></td>
                        <td class="align-middle ">@item.Name</td>
                        <td class="align-middle ">@item.Description</td>
                        <td class="align-middle ">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil"></i></a> |
                            <a class="btn btn-outline-info"><i class="bi bi-eye"></i></a> |
                            <a class="btn btn-outline-danger"><i class="bi bi-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>


</div>


























































